{
  "name": "Stanford Law School Kiosk",
  "short_name": "SLS Kiosk",
  "description": "Kiosk app for Stanford Law School's kiosks in lobby areas.",
  "manifest_version": 2,
  "version": "0.2.7.5",
  "author": {
    "name": "Stanford Law IT",
  },
  "kiosk_enabled": true,
  "offline_enabled": true,
  "icons": {
    "16": "img/icon_16.png",
    "128": "img/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["www/js/jquery.min.js","js/lib/wsc-chrome.js","js/main.js"],
      "persistent": false
    }
  },
  "sockets":{
    "tcpServer": {
      "listen": "*"
    }
  },
  "permissions": [
    "<all_urls>",
    "system.display",
    "system.network",
    "power",
    "webview",
    "alwaysOnTopWindows",
    "storage",
    "app.window.fullscreen",
    "app.window.fullscreen.overrideEsc",
    {"fileSystem": ["directory","retainEntries"]}
  ],
  "optional_permissions": [ "audioCapture", "videoCapture" ]

}
